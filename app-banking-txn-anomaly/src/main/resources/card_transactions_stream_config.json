{
  "configId": "card-txns",
  "durableNotification": true,
  "documentIdField": "transactionId",
  "watchQueries": {
    "transaction_location_anomalies": {
      "query": {
        "bool": {
          "must": [
            {
              "query": {
                "filtered": {
                  "filter": {
                    "geo_distance": {
                      "distance": "1000km",
                      "distance_type": "plane",
                      "userLocation": {
                        "lat": 21.145800,
                        "lon": 79.088155
                      }
                    }
                  }
                }
              }
            },
            {
              "query": {
                "filtered": {
                  "filter": {
                    "geo_distance_range": {
                      "gte": "1000km",
                      "transactionLocation": {
                        "lat": 21.145800,
                        "lon": 79.088155
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "transaction_amount_anomalies": {
      "query": {
        "bool": {
          "must": [
            {
              "nested": {
                "path": "custom__",
                "query": {
                  "bool": {
                    "must": [
                      {
                        "match": {
                          "custom__.highValueTransaction": true
                        }
                      }
                    ]
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "indexDefinition": {
    "properties": {
      "timestamp": {
        "type": "date"
      },
      "transactionId": {
        "type": "string"
      },
      "cardNumber": {
        "type": "string",
        "index": "not_analyzed"
      },
      "cardHolderNationality": {
        "type": "string",
        "index": "not_analyzed"
      },
      "userLocation": {
        "type": "geo_point"
      },
      "transactionLocation": {
        "type": "geo_point"
      },
      "transactionLocationRaw": {
        "type": "string"
      },
      "bank": {
        "type": "string",
        "index": "not_analyzed"
      },
      "amount": {
        "type": "long"
      },
      "custom__": {
        "type": "nested",
        "properties": {
          "highValueTransaction": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "persistEvent": true,
  "enableVisualization": true,
  "batchQueryConfig": {
    "maxNumberOfDocs": 1000000,
    "maxBatchSizeInBytes": 2147483647
  },
  "enabled": true,
  "customProcessingHookClassName": "com.sai.app.banking.txn.EventReceiver"
}